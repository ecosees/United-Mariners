<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_name_background"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/im_back_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:background="@drawable/back_icon" />


        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/dialog_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_dialog" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/tv_change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/edit_pen"
                android:drawablePadding="@dimen/drawable_padding"
                android:text="@string/change"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/trash"
                android:drawablePadding="@dimen/drawable_padding"
                android:text="@string/delete"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_big" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>